        $adapter = 'Pdo_Mysql';
    }
    ?>
    <div class="formRow">
        <label><?php echo $this->translate('Database Adapter') . ':';?></label>
        <?php echo $this->formSelect('db_adapter', $adapter, null, $dbAdapters);?>
