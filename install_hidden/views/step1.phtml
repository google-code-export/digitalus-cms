    <p><?php echo $this->translate('Now you need to set up the database connection. If you are unsure about this contact your hosting provider.');?></p>

    <?php
    $dbAdapters = Digitalus_Installer_Database::getAllowedAdapters();
    if (isset($this->data['db_adapter']) && !empty($this->data['db_adapter'])) {
