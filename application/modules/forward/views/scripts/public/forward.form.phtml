<?php
$form = new Digitalus_Form();

// type in the path to forward to
$formText = $form->createElement('text', 'pagePath', array(
    'label'     => $this->getTranslation('Enter forward path'),
    'required'  => true,
    'value'     => $this->getData('pagePath', $this->data->get),
    'belongsTo' => $this->getData('element',  $this->data->get),
));
echo $formText;