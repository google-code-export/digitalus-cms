<?php $this->placeholder('formHeadline')->set($this->GetTranslation('Administrator Login'));?>
<p><?php echo $this->GetTranslation('Please enter your username (this is your email address) and password to get started.');?></p>
<form action="<?php echo $this->baseUrl;?>/admin/auth/login" method="post">
<?php
    echo $this->formHidden('uri', $this->uri);
    echo $this->FormRow($this->GetTranslation('Username'), $this->FormText('adminUsername', $this->username));
