<fieldset class="formColumn">
    <legend><?php echo $this->GetTranslation('My Bookmarks');?></legend>
    <?php if ($this->bookmarks) {
        ?>
    <ul>
    <?php foreach ($this->bookmarks as $bookmark) {?>
        <li><?php
            echo $this->link(null, $this->baseUrl . '/admin/index/delete-bookmark/id/' . $bookmark->id, 'link_delete.png', 'clear');
            $content = $bookmark->content;
            if (strpos($content, 'mod_') == 0) {
                $content = str_replace('mod_', '', $content);
                $content = DSF_Toolbox_String::stripUnderscores($content);
                $content = 'mod_' . $content;
            }
            echo $this->link($bookmark->node, $this->baseUrl . '/' . $content);
        ?></li>
    <?php } ?>
    </ul>
    <?php } else {
            echo $this->GetTranslation('You do not have any bookmarks.');
    } ?>
</fieldset>

