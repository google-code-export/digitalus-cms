    <fieldset class="formColumn">
        <legend><?php echo $this->GetTranslation('My Account');?></legend>
        <?php
            $u = new User();
            $user = $u->getCurrentUser();
            echo $this->formHidden('id',$user->id);
            echo $this->FormRow($this->GetTranslation('First Name'), $this->formText('first_name' , $this->identity->first_name));
            echo $this->FormRow($this->GetTranslation('Last Name'), $this->formText('last_name', $this->identity->last_name));
            echo $this->FormRow($this->GetTranslation('Email'), $this->formText('email', $this->identity->email));
            echo $this->FormRow($this->formCheckbox('update_password'), $this->GetTranslation('Update password?'));
            echo $this->FormRow($this->GetTranslation('Password'), $this->formPassword('password'));
